<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    
    <TextView
        android:id="@+id/button_no_register_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background=""
        android:drawableRight="@drawable/ic_arrow_right"
        android:textColor="@color/black"
        android:text="@string/button_no_register_text"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </TextView>

    <TextView
        android:id="@+id/register_text_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/register_text"
        android:textSize="35sp"
        android:layout_marginTop="105sp"
        android:layout_marginStart="15sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        >
    </TextView>

    <TextView
        android:id="@+id/register_text_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/child_register_text"
        android:textColor="@color/gray"
        android:textSize="17.5sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toBottomOf="@id/register_text_one"
        app:layout_constraintStart_toStartOf="parent">
    </TextView>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_container_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16sp"
        app:layout_constraintTop_toBottomOf="@id/register_text_two"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
            <EditText
                android:id="@+id/register_edit_text_one"
                android:layout_width="375sp"
                android:layout_height="55sp"
                android:layout_marginStart="15sp"
                android:textStyle="bold"
                android:hint="@string/fio_input_text"
                android:inputType="text"
                android:padding="13sp"
                android:drawableEnd="@drawable/ic_person_input"
                app:layout_constraintStart_toStartOf="parent"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
            </EditText>
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_container_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16sp"
        app:layout_constraintTop_toBottomOf="@id/input_container_one"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
            <EditText
                android:id="@+id/register_text_three"
                android:layout_width="375sp"
                android:layout_height="55sp"
                android:layout_marginStart="15sp"
                android:textStyle="bold"
                android:hint="@string/email_input_text"
                android:inputType="textEmailAddress"
                android:padding="13sp"
                android:drawableEnd="@drawable/ic_email_input">
            </EditText>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_container_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16sp"
        app:layout_constraintTop_toBottomOf="@id/input_container_two"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
            <EditText
                android:id="@+id/register_text_four"
                android:layout_width="375sp"
                android:layout_height="55sp"
                android:layout_marginStart="15sp"
                android:textStyle="bold"
                android:hint="@string/password_input_text"
                android:inputType="textPassword"
                android:padding="13sp"
                android:drawableEnd="@drawable/ic_password_input">
            </EditText>
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_container_four"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16sp"
        app:layout_constraintTop_toBottomOf="@id/input_container_three"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <EditText
                android:id="@+id/register_text_five"
                android:layout_width="375sp"
                android:layout_height="55sp"
                android:layout_marginStart="15sp"
                android:textStyle="bold"
                android:hint="@string/password_again_input_text"
                android:inputType="textPassword"
                android:padding="13sp"
                android:drawableEnd="@drawable/ic_password_input"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/register_text_four">
            </EditText>

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/button_register_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_text_register"
        android:layout_marginTop="20sp"
        app:layout_constraintTop_toBottomOf="@id/input_container_four"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
    </Button>

    <TextView
        android:id="@+id/text_go_next_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10sp"
        android:layout_marginTop="5sp"
        android:text="@string/register_text_end"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/button_register_end"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
    </TextView>

    <TextView
        android:id="@+id/next_page_log"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:layout_marginTop="5sp"
        android:layout_marginStart="10sp"
        android:text="@string/next_page_log_text"
        android:textSize="20sp"
        android:textColor="@android:color/holo_blue_dark"
        app:layout_constraintTop_toBottomOf="@id/text_go_next_page"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
    </TextView>


</androidx.constraintlayout.widget.ConstraintLayout>